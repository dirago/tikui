{
  "name": "tikui",
  "version": "1.0.0",
  "description": "Pattern Library tool",
  "keywords": [
    "ui",
    "ui kit",
    "design system",
    "pattern library"
  ],
  "homepage": "https://github.com/tikui/tikui.git#readme",
  "bugs": {
    "url": "https://github.com/tikui/tikui/issues"
  },
  "license": "MIT",
  "author": {
